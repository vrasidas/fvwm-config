#Read menudefs.hook Quiet

AddToMenu MainMenu MainMenu title
+ DynamicPopupAction Function MakeMainMenu

DestroyFunc MakeMainMenu
AddToFunc MakeMainMenu
+ I DestroyMenu recreate MainMenu
+ I AddToMenu MainMenu "FVWM" Title
+ I AddToMenu MainMenu MissingSubmenuFunction FuncFvwmMenuDirectory
+ I AddToMenu MainMenu "Browser"%menu/internet.png% LaunchRaiseSwitch \
                        Iceweasel iceweasel
+ I AddToMenu MainMenu "Terminal"%menu/terminal.png% Exec exec $[fvwm_terminal]
+ I AddToMenu MainMenu "Files"%menu/system-file-manager.png% \
                        Exec exec $[fvwm_filemanager]
+ I AddToMenu MainMenu "Editor"%menu/text-editor.png% Exec exec $[fvwm_editor]
+ I AddToMenu MainMenu "Mail"%menu/mail.png% Exec exec $[fvwm_mail]
+ I AddToMenu MainMenu "Chat"%menu/chat.png% \
                        Exec exec $[fvwm_im]
+ I AddToMenu MainMenu "Music%menu/music.png%" Exec exec $[fvwm_player]
+ I AddToMenu MainMenu "" Nop
+ I AddToMenu MainMenu "Home"%menu/home.png% Popup $[HOME]
+ I AddToMenu MainMenu "Desktops"%menu/desktop.png% Popup DeskMenu
+ I AddToMenu MainMenu "Settings"%menu/prefs2.png% Popup Preferences
+ I AddToMenu MainMenu "" Nop
+ I AddToMenu MainMenu "Debian%menu/debian.png%" Popup "/Debian"
+ I AddToMenu MainMenu "" Nop
+ I AddToMenu MainMenu "Restart"%menu/mini.ray.xpm% Restart
+ I AddToMenu MainMenu "Logout"%menu/exit.png% FvwmForm FvwmForm-QuitVerify

DestroyMenu "MusicMenu"
AddToMenu "MusicMenu"
+ "Play/Pause%media/play-pause.png%" Exec exec quodlibet --play-pause
+ "Previous%media/prev.png%" Exec exec quodlibet --previous
+ "Next%media/next.png%" Exec exec quodlibet --next

DestroyMenu "DeskMenu"
AddToMenu "DeskMenu"
+ "Show Desktop%menu/desktop.png%" FuncFvwmHideAllApps
+ "Work%letters/alpha.png%" GotoDeskAndPage 0 0 0
+ "Net%letters/beta.png%" GotoDeskAndPage 1 0 0
+ "Media%letters/gamma.png%" GotoDeskAndPage 2 0 0
+ "Misc%letters/delta.png%" GotoDeskAndPage 3 0 0

DestroyMenu Preferences
AddToMenu Preferences
+ "nvidia settings%menu/nvidia.png%" Exec exec nvidia-settings
+ "Alsamixer%menu/alsamixer.xpm%" Exec exec $[fvwm_terminal] \
	-icon $[FVWM_USERDIR]/icons/alsamixergui.xpm -e alsamixer -g

DestroyMenu WindowMenu
AddToMenu WindowMenu "Window Ops" Title top
+ "Iconify%ops/iconify1.xpm%" Iconify
+ "Close%ops/cross.xpm%" Delete
+ "Maximizations%ops/winXX-normalize.xpm%" Popup MaxMenu
+ "On Top%ops/raise.xpm%" WinOnTop
+ "Raise%ops/window-raise.xpm%" Raise
+ "Lower%ops/window-lower.xpm%" Lower
+ "Move%ops/move2.xpm%" Move
+ "Resize%ops/resize.xpm%" Resize
+ "Place Again%ops/16x16-kde/windows.xpm%" PlaceAgain Anim
+ "Center%ops/mini.move1.xpm%" Move 50-50w 50-50w
+ "Restore%ops/mini.refresh.xpm%" FuncFvwmRestore
+ "Refresh%ops/mini.turn.xpm%" RefreshWindow
+ "" Nop
+ "Kill%ops/window-close.xpm%" Destroy
+ "" Nop
+ "Undecorate%ops/remove.png%" Undecorate
+ "Redecorate%ops/add.png%" Decorate
+ "" Nop
+ "Toggle autoshade%ops/shade1.xpm%" ToggleAutoShade
+ "Autoshade and On Top%ops/shade2.xpm%" AutoShadeAndOnTop
+ "" Nop
+ "Pin%ops/stick.xpm%" Stick
+ "Move to Previous Desk%ops/back.png%" MoveToDesk -1 0 3
+ "Move to Next Desk%ops/forward.png%" MoveToDesk 1 0 3
+ "Move to Desktop...%ops/desktop.png%" Popup DesktopNames
+ "" Nop
+ "Identify%ops/mini.eye.xpm%" FvwmIdent

DestroyMenu DesktopNames
AddToMenu DesktopNames
+ "Work%letters/alpha.png%" MoveToDesk 0 0
+ "Net%letters/beta.png%" MoveToDesk 0 1
+ "Media%letters/gamma.png%" MoveToDesk 0 2
