# -*- fvwm -*-
#  Ignore CapsLock and NumLock modifiers so that they do not
#  mess up your configuration:
IgnoreModifiers L25

#  Path to scripts folder, containing all
#  scripts used in this setup:

SetEnv fvwm_script $[FVWM_USERDIR]/scripts

SetEnv fvwm_editor 'urxvtcd -icon $[HOME]/.fvwm/icons/emacs.png -name Emacsclient -T emacs -e emacsclient -t'
SetEnv fvwm_filemanager 'thunar'
SetEnv fvwm_browser 'iceweasel'
SetEnv fvwm_mail 'urxvtc -icon ${HOME}/.fvwm/icons/gnus-lightblue.png -name Emacsclient -T emacs -e emacsclient -t --eval "(my-switch-to-gnus-group-buffer)"'
SetEnv fvwm_image_viewer 'gpicview'
SetEnv fvwm_im 'urxvtc -icon ${HOME}/.fvwm/icons/erc.png -name Emacsclient -T emacs -e emacsclient -t --eval "(my-func-switch-to-erc-buffer)"'
SetEnv fvwm_terminal 'urxvtcd'
SetEnv fvwm_player 'quodlibet'
SetEnv fvwm_runner 'gmrun'

ImagePath $[FVWM_USERDIR]/icons/decor/:+:$[FVWM_USERDIR]/icons

SetEnv mHome "$[HOME]/.fvwm"
SetEnv mScripts "$[mHome]/scripts"

DestroyModuleConfig FvwmScript: *
*FvwmScript: Path $[mScripts]

OpaqueMoveSize unlimited
Style * ResizeOpaque

DesktopSize 1x1

DesktopName 0 Work
DesktopName 1 Net
DesktopName 2 Media
DesktopName 3 Misc

CleanupColorsets
Colorset 0 bg rgb:14/14/14, fg rgb:dd/dd/dd, hi rgb:24/24/24, sh rgb:0a/0a/0a, fgsh rgb:55/88/ee
# inactive buttons, title ################################
